@model List<UserViewModel>

<h2>Управление пользователями</h2>

<table class="table">
    <thead>
        <tr>
            <th>ФИО</th>
            <th>Email</th>
            <th>Роли</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles.Where(r => r.IsSelected).Select(r => r.Name))</td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary">Редактировать</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

    <a asp-action="CreateUser" class="btn btn-success mb-3"> <i class="fas fa-user-plus"></i> Создать пользователя </a>

</table>